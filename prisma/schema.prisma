// Prisma Schema for SMIRROR Solutions
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for admin/authentication
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

// Contact form submissions
model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  company   String?
  message   String
  service   String?
  budget    String?
  status    ContactStatus @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

enum ContactStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// Referral submissions
model Referral {
  id          String   @id @default(uuid())
  referrerName String
  referrerEmail String
  referrerPhone String?
  companyName   String?
  clientName    String?
  clientEmail   String?
  clientPhone   String?
  message       String?
  status        ReferralStatus @default(PENDING)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("referrals")
}

enum ReferralStatus {
  PENDING
  CONTACTED
  CONVERTED
  ARCHIVED
}

// Feedback submissions
model Feedback {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  company   String?
  rating    Int      // 1-5 stars
  message   String
  status    FeedbackStatus @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feedbacks")
}

enum FeedbackStatus {
  NEW
  REVIEWED
  ARCHIVED
}

// Support tickets
model Support {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String?
  subject     String
  message     String
  category    String?
  priority    SupportPriority @default(MEDIUM)
  status      SupportStatus @default(OPEN)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("supports")
}

enum SupportPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum SupportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// Internship applications
model Internship {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  email         String
  phone         String
  university    String?
  course        String?
  yearOfStudy   String?
  skills        String?
  motivation    String
  portfolioUrl  String?
  resumeUrl     String?
  status        InternshipStatus @default(PENDING)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("internships")
}

enum InternshipStatus {
  PENDING
  REVIEWED
  INTERVIEWED
  ACCEPTED
  REJECTED
}

// Career applications
model Career {
  id            String   @id @default(uuid())
  position      String
  firstName     String
  lastName      String
  email         String
  phone         String
  experience    String?
  skills        String?
  coverLetter   String?
  resumeUrl     String?
  portfolioUrl  String?
  status        CareerStatus @default(PENDING)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("careers")
}

enum CareerStatus {
  PENDING
  REVIEWED
  INTERVIEWED
  ACCEPTED
  REJECTED
}

// Project Commissioning (Enterprise)
model ProjectInquiry {
  id             String   @id @default(uuid())
  clientName     String
  clientEmail    String
  companyName    String?
  projectType    String   // e.g., "Web App", "Mobile App", "E-commerce"
  budgetRange    String   // e.g., "$5k-$10k", "$10k-$25k"
  timeline       String   // e.g., "1-3 months"
  description    String   @db.Text
  techPreferences String? // JSON or comma-separated string
  status         ProjectInquiryStatus @default(NEW)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("project_inquiries")
}

enum ProjectInquiryStatus {
  NEW
  UNDER_REVIEW
  PROPOSAL_SENT
  ACCEPTED
  DECLINED
  ARCHIVED
}

// Collaborator/Freelancer Applications (Enterprise)
model CollaboratorApplication {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  email          String   @unique
  phone          String?
  role           String   // e.g., "Frontend Dev", "UI/UX Designer"
  portfolioUrl   String
  linkedinUrl    String?
  rate           String?  // e.g., "$50/hr"
  availability   String   // e.g., "Part-time", "Full-time"
  skills         String   // JSON or comma-separated
  experienceYears Int?
  bio            String   @db.Text
  status         CollaboratorStatus @default(PENDING)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("collaborator_applications")
}

enum CollaboratorStatus {
  PENDING
  REVIEWED
  INTERVIEWED
  APPROVED
  REJECTED
}
